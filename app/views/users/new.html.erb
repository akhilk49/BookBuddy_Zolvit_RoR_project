<section class="vh-100">
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-5">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw1.webp"
             class="img-fluid" alt="Signup image">
      </div>

      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
        <h2 class="text-center mb-4">Sign Up</h2>

        <%= form_with model: @user, url: signup_path, html: { class: "needs-validation" } do |form| %>
          <!-- Name -->
          <div class="form-outline mb-4">
            <%= form.label :name, class: "form-label" %>
            <%= form.text_field :name, class: "form-control form-control-lg", placeholder: "Your full name" %>
          </div>

          <!-- Email -->
          <div class="form-outline mb-4">
            <%= form.label :email, class: "form-label" %>
            <%= form.email_field :email, class: "form-control form-control-lg", placeholder: "Enter email address" %>
          </div>

          <!-- Password -->
          <div class="form-outline mb-4">
            <%= form.label :password, class: "form-label" %>
            <%= form.password_field :password, class: "form-control form-control-lg", placeholder: "Password" %>
          </div>

          <!-- Password Confirmation -->
          <div class="form-outline mb-4">
            <%= form.label :password_confirmation, class: "form-label" %>
            <%= form.password_field :password_confirmation, class: "form-control form-control-lg", placeholder: "Confirm password" %>
          </div>

          <!-- Submit button -->
          <div class="text-center text-lg-start mt-4 pt-2">
            <%= form.submit "Sign Up", class: "btn btn-primary btn-lg", style: "padding-left: 2.5rem; padding-right: 2.5rem;" %>
            <p class="small fw-bold mt-2 pt-1 mb-0">
              Already have an account?
            <%= link_to "Login", login_path, class: "link-danger text-decoration-none ms-1" %>
            </p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
