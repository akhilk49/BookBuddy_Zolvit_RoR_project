<%= form_with(model: book, local: true, html: { class: "needs-validation" }) do |form| %>
  <% if book.errors.any? %>
    <div class="alert alert-danger">
      <h4 class="alert-heading"><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h4>
      <ul class="mb-0">
        <% book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :author, class: "form-label" %>
    <%= form.text_field :author, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control", rows: 4 %>
  </div>

  <div class="mb-3">
    <%= form.label :user_id, "User ID", class: "form-label" %>
    <%= form.number_field :user_id, class: "form-control" %>
  </div>

  <div>
    <%= form.submit "Save Book", class: "btn btn-primary" %>
  </div>
<% end %>
