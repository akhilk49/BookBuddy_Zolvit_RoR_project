<% content_for :title, "Books" %>

<div class="container mt-5">

  <% if notice %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">My Books</h1>
    <%= link_to "New Book", new_book_path, class: "btn btn-primary" %>
  </div>

  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% @books.each do |book| %>
      <div class="col">
        <div class="card h-100 shadow-sm">
          <% if book.image.attached? %>
            <%= image_tag url_for(book.image), class: "card-img-top", style: "height: auto; object-fit: cover;" %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= book.title %></h5>
            <p class="card-text"><%= truncate(book.description, length: 100) if book.respond_to?(:description) %></p>
            <%= link_to "Show this book", book, class: "btn btn-outline-secondary mt-2" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

</div>
