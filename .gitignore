# See https://help.github.com/articles/ignoring-files/ for more about ignoring files.

# Ignore bundler config
/.bundle

# Ignore the default SQLite database
/db/*.sqlite3
/db/*.sqlite3-journal

# Ignore all logfiles and tempfiles.
/log/*
/tmp/*
!/log/.keep
!/tmp/.keep

# Ignore pidfiles, but keep the directory
/tmp/pids/*
!/tmp/pids/.keep

# Ignore cache files
/cache/*
!/cache/.keep

# Ignore Byebug command history file
.byebug_history

# Ignore uploaded files in development (if using Active Storage)
/storage/*
!/storage/.keep

# Ignore master key for decrypting credentials and other encrypted files
/config/credentials.yml.enc
/config/master.key

# Ignore dotenv environment variables file
.env

# Ignore node modules (if using Webpacker or JS bundlers)
/node_modules/

# Ignore yarn error logs
/yarn-error.log

# Ignore public/packs if using Webpacker (optional)
/public/packs
/public/packs-test

# Ignore coverage reports generated by tools like SimpleCov
/coverage/

# Ignore system-specific files
.DS_Store
Thumbs.db

# Ignore bundler config
.bundle/

# Ignore temporary files from editors
*.swp
*.swo

# Ignore log files
*.log

# Ignore temporary files from Mac
*.DS_Store

# Ignore files generated by Spring preloader
tmp/spring/*

# Ignore uploaded files in production if stored locally
/public/uploads/

# Ignore RubyMine IDE files
.idea/

# Ignore Visual Studio Code settings folder
.vscode/

# Ignore test and development databases
/db/*.sqlite3

# Ignore temp files
/tmp/

/.gitignore
/app/assets/builds/*
!/app/assets/builds/.keep

/node_modules
